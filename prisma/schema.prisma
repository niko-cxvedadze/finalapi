// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file: ./dev.db"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String
  role     String
}

model Product {
  id          String  @id @default(uuid())
  title       String
  description String
  category    String
  price       Float
  deletable   Boolean @default(false)
}

